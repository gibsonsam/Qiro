@using Humanizer
@using Qiro.Client.Features.Blogs.DTOs

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Primary" Variant="Variant.Filled">
                <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Default" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText>@Metadata.Title</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        Published on <b>@Metadata.PublishedOn.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</b> (@Metadata.PublishedOn.Humanize()) by <b>@Metadata.Author</b>.
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.ReadMore" Href="@($"blogs/{Metadata.Id}")" />
    </MudCardActions>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public required BlogMetadataDto Metadata { get; set; }
}
